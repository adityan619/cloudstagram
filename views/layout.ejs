<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" media="screen" href="/stylesheets/normalize.css" >
    <link rel="stylesheet" media="screen" href="/bootstrap/css/bootstrap.min.css" >
    <link rel="stylesheet" media="screen" href="/stylesheets/style.css" >
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.timeago.js"></script>
    <script type="text/javascript" src="/javascripts/cloudstagram.js"></script>
    <script type="text/javascript">
      var loggedin = <%= loggedin(username) %>;
      var loggedinuser = "<%= loggedinuser(username) %>";
    </script>
  </head>
  <body>
      <div class='navbar navbar-fixed-top'>
        <div class="navbar-inner">
          <div class='nav-collapse'>
            <ul class="nav">
              <li>
                <a href="/">Home</a>
              </li>
              <% if (username) { %>
              <li>
                <a href="/logout">Logout</a>
              </li>
              <li>
                <a href="/latest">Latest Images</a>
              </li>
              <% } else { %>
              <li>
                <a href="/login">Login</a>
              </li>
              <li>
                <a href="/register">Register</a>
              </li>
              <% } %>
            </ul>
          </div>
          <% if (username) { %>
          <div class="right">
            <ul class="nav">
              <li>
                <a href="/profile/<%= username %>">My Profile</a>
              </li>
            </ul>
          </div>
          <% } %>
        </div>
      </div>
      <div class="container content">
        <% if (username) { %>
        <div class="span8">
          Welcome Message Here
        </div>
        <div id="form-container" class="container span4">
          <form id="upload-form" class="well span4" action="/upload" method="post" enctype="multipart/form-data">
            <fieldset>
              <legend>Select an image to upload</legend>
              <div id="file-control-group" class="control-group<% if (session.upload_error) { %> error<% } %>">
                <div class="controls">
                  <% if (session.upload_error) { %>
                  <span id="file-upload-error" class="help-inline"><%= session.upload_error %></span>
                  <% } %>
                  <span id="file-error-message" class="help-inline hidden">Please select an image to upload</span>
                  <input type="file" name="image" />
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="commentTextArea">Comment (<span id="charsLeft help-inline">140</span>)</label>
                <div class="controls">
                  <textarea class="input-xlarge" id="commentTextArea" rows="3" name="comment"></textarea>
                </div>
              </div>
              <div class="form-actions">
                <button type="submit" class="btn btn-primary">Upload</button>
                <button class="btn">Cancel</button>
              </div>
            </fieldset>
          </form>
        </div>
        <% } %>
        <%- body %>
      </div>
  </body>
</html>
