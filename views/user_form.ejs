<div id="<%= action %>-form" class="user-form container span4<% if (ishidden) { %> hidden<% } %>">
  <form action="/<%= action %>" method="post" class="well">
    <fieldset>
      <legend><%=: action | capitalize %> to start using Cloudstagram</legend>
      <div class="control-group">
        <% if (error) { %><span class="help-inline"><%= error %></span><% } %>
        <label class="control-label">Username</label>
        <div class="controls">
          <input type="text" name="username">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Password</label>
        <div class="controls">
          <input type="password" name="password">
        </div>
      </div>
      <div>
        <input class="btn btn-primary" type="submit" value="<%=: action | capitalize %>" />
      </div>
    </fieldset>
  </form>
</div>
