<div id="userinfo" class="row box">
  <div class="span6">
    <strong>User</strong><i class="icon-user"></i><span><%= profileUser %></span>
  </div>
  <div >
    <div class="countInfo">
      <span class="number"><%= data.imagesCount %></span><br /><span>PHOTOS</span>
    </div>
    <div class="countInfo">
      <span class="number"><%= data.followersCount %></span><br /><span>FOLLOWERS</span>
    </div>
    <div class="countInfo">
      <span class="number"><%= data.followsCount %></span><br /><span>FOLLOWING</span>
    </div>
  </div>
</div>
<% if (username && profileUser != username) { %>
<div id="followactions">
  <div id="followform" class="hidden">
    <span>You are not following this user</span><button class="follow btn btn-primary" data-id="<%= profileUser %>">FOLLOW</button>
  </div>
  <div id="alreadyfollow" class="hidden">
    <span>You are following this user</span><button disabled class="follow btn btn-primary" data-id="<%= profileUser %>">FOLLOWING</button>
  </div>
</div>
<% } %>
<div id="userimages">
  <%- renderedImages %>
</div>
<script type="text/javascript">
  var profileUser = "<%= profileUser %>";
</script>
<script type="text/javascript" src="/javascripts/profile.js"></script>
